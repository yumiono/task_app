<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <p>タスク内容</p>
      <p>
        <%= @post.content %>
      </p>
      <p>タスク締切</p>
      <p>  
      <%= @post.due_date %>
      </p>
      <p>タスクの担当者</p>
      <p>  
      <%= @post.executor %>
      </p>
      <div class = "update-time">
      <p>更新日</p>
      <%= @post.updated_at %>
    　</div>
      <div class = "post-time">
      <p>登録日</p>  
      <%= @post.created_at %>
    　</div>
      <img src = "<%= "/post_images/#{@post.image_name}"%>">
      <div class = "post-menus">
      　<%= link_to("編集","/posts/#{@post.id}/edit") %>
        <%= link_to("削除","/posts/#{@post.id}/destroy",{method: "post"}) %>
      </div>
    </div>
  </div>
</div>